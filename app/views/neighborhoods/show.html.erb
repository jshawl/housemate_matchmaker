<div class = "container-fluid">
  <h1 class = "neighborhood-title"> Current Listings for <%=@neighborhood.title %></h1>
  <div class = "listing-add"><%= link_to "Add listing (+)", new_neighborhood_listing_path(@neighborhood) %>
  </div>

  <%= form_tag neighborhood_path, :method => 'get' do %>
    <div class = "search">
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </div>
  <% end %>

  <% @listings.in_groups_of(1, false).each do |group| #function to get listings to display on unique row - bootstrap %>
  <div class = "row">
    <% group.each do |listing| %>
    <div id = "listing-container" class = "col-lg-8 col-lg-offset-2 listing-grid text-center">
      <div class = "listing-show">
        <%= link_to(listing.name, neighborhood_listing_path(@neighborhood, listing,))%>
        <%= image_tag(listing.photo_url, class: "listing-photo") %>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
