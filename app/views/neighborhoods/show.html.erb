<div class = "container">
    <h1 class = "neighborhood-title"> Current Listings for <%=@neighborhood.title %></h1>
    <%= link_to "Add listing (+)", new_neighborhood_listing_path(@neighborhood) %>
      <% @neighborhood.listings.in_groups_of(3, false).each do |group| %>
        <div class = "row">
          <% group.each do |listing| %>
            <div class = "col-md-4">
              <h3><%= link_to(listing.name, neighborhood_listing_path(@neighborhood, listing))%></h3>
              <%= image_tag(listing.photo_url, class: "listing-photo") %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
