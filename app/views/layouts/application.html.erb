<!DOCTYPE html>
<html>
<head>
  <title>HousemateMatchmaker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
<p><%= link_to 'Signout', destroy_user_session_path, :method => :delete %></p>
<% else %>
<p><%= link_to 'Signup', new_user_registration_path %></p>
<p><%= link_to 'Login', new_user_session_path %></p>
<% end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
    <button><%= link_to "Housemate Matchmaker", neighborhoods_path %></button>
<%= yield %>

</body>
</html>
